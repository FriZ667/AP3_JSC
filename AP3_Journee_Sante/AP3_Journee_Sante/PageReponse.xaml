<Page x:Class="AP3_Journee_Sante.PageReponse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AP3_Journee_Sante"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageReponse">

    <Grid Background="White">
        <Label Content="Suivi de réponse" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnjournee" Content="Gérer Journée" HorizontalAlignment="Left" Margin="69,375,0,0" VerticalAlignment="Top" Height="59" Width="134" FontFamily="Berlin Sans FB Demi" FontSize="18"/>
        <Button x:Name="btnasso" Content="Gérer Association" HorizontalAlignment="Center" Margin="0,375,0,0" VerticalAlignment="Top" Height="59" Width="134" FontFamily="Berlin Sans FB Demi" FontSize="18" Click="btnasso_Click"/>
        <Button x:Name="btnreponse" Content="Suivi de réponse" Margin="597,375,69,0" VerticalAlignment="Top" Height="59" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="69,150,69,150">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
