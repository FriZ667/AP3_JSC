<Page x:Class="AP3_Journee_Sante.PageAsso"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AP3_Journee_Sante"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAsso">

    <Grid Background="white">
        <Label Content="Rechercher :" HorizontalAlignment="Left" Margin="214,144,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnjournee" Content="Gérer Journée" HorizontalAlignment="Left" Margin="69,375,0,0" VerticalAlignment="Top" Height="59" Width="134" FontFamily="Berlin Sans FB Demi" FontSize="18"/>
        <Button x:Name="btnasso" Content="Gérer Association" HorizontalAlignment="Center" Margin="0,375,0,0" VerticalAlignment="Top" Height="59" Width="134" FontFamily="Berlin Sans FB Demi" FontSize="18" Click="btnasso_Click"/>
        <Button x:Name="btnreponse" Content="Suivi de réponse" Margin="597,375,69,0" VerticalAlignment="Top" Height="59" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="69,188,69,117">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ScrollBar HorizontalAlignment="Left" Margin="747,188,0,0" VerticalAlignment="Top" Height="145" Width="24"/>
        <TextBox HorizontalAlignment="Left" Margin="321,148,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="269"/>
        <Button Content="Supprimer Association" HorizontalAlignment="Left" Margin="597,37,0,0" VerticalAlignment="Top" Height="46" Width="134" Background="Red" Foreground="White"/>
        <Button Content="Modifier Association" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top" Height="46" Width="134"/>
        <Button Content="Créer Association" HorizontalAlignment="Left" Margin="69,37,0,0" VerticalAlignment="Top" Height="46" Width="134"/>
    </Grid>
</Page>
